<h2>Welcome To Camp Ivanhoe 2015</h2>

<!-- Signup Form -->
<form action="/api/people" method="post">
  <div class="row">
    <div class="six columns">
        <label for="person[name]">Scout's Name:</label>
        <input type="text" name="person[name]">
    </div>
    <div class="six columns">
        <label for="person[email]">Scout's Email:</label>
        <input type="text" name="person[email]">
    </div>
</div>
  <div class="row">
    <input type="submit" value="Sign Up">
  </div>
</form>
<br/>
<br/>
<br/>
<br/>

<!-- Signup List -->
<table class="twelve columns people_table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Remove Me!</th>
    </tr>
  </thead>

  <tbody id="people_list">
    <!-- Backbone List View -->
  </tbody>

</table>


